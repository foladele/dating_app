<h1  class ="home" >Meet Hot Singles Near you</h1>

<hr />

<%= form_tag people_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :gender => nil %>
  </p>
<% end %>


<% if @people.any? %>
<ul>
	<%@people.each do |person| %>
	<li>
		<%= link_to person.name, person_path(person) %>
	</li>
	<%end%>
</ul>
<% else %>
<h3>No People, please create one!</h3>
<% end %>

<hr />

<%= link_to '<button type="button"> logout </button>'.html_safe, session_path(@user_id), method: :delete %>


